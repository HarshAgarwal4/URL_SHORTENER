<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            text-align: center;
        }

        .navbar {
            background: #333;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: white;
        }

        .navbar a {
            color: white;
            text-decoration: none;
            padding: 10px;
        }

        .container {
            width: 50%;
            margin: 50px auto;
            background: white;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
        }

        input,
        textarea {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button {
            background-color: blue;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: darkblue;
        }
    </style>
</head>

<body>
    <div class="navbar">
        <div><a href="/">Home</a></div>
        <div><a href="/login">Login</a></div>
    </div>
    <div class="container">
        <h2>Contact Us</h2>
        <iframe name="responseFrame" style="display: none;"></iframe>
        <form id="form" method="post" enctype="multipart/form-data">
            <input type="text" name="name" placeholder="Name" required id="Client_name" target="responseFrame">
            <input type="text" name="username" placeholder="Username" required id="Client_username">
            <input type="password" name="password" placeholder="Password" required id="Client_password">
            <input type="tel" name="phone" placeholder="Phone" required id="Client_phone">
            <input type="email" name="email" placeholder="Email" required id="Client_email">
            <textarea name="msg" placeholder="msg" rows="5" required id="Client_msg"></textarea>
            <input type="file" name="picture" accept="image/*" required id="Client_picture">
            <button type="submit">Submit</button>
        </form>
        <script>
            let form = document.getElementById("form");

            form.addEventListener("submit", async (e) => {
                e.preventDefault(); // Prevent default form submission

                let formData = new FormData(form); // Create FormData object

                try {
                    let response = await fetch("/signup", {
                        method: "POST",
                        body: formData,
                    });

                    let result = await response.json(); // Convert response to JSON

                    if (result.status === 1) {
                        alert("Signup successful!"); // Show success alert
                        form.reset(); // Clear the form
                    } else {
                        alert("Error: " + result.message); // Show error alert

                    }
                } catch (error) {
                    console.error("Error submitting form:", error);
                    alert("Something went wrong. Please try again.");
                }
            });


        </script>
    </div>
</body>

</html>